<launch>
  <include file="$(find turtlebot_navigation)/launch/includes/velocity_smoother.launch.xml"/>
  <!-- <include file="$(find turtlebot_navigation)/launch/includes/safety_controller.launch.xml"/> -->
  <arg name="odom_frame_id"   default="odom"/>
  <arg name="base_frame_id"   default="base_footprint"/>
  <arg name="global_frame_id" default="odom"/>
  <arg name="odom_topic" default="odom" />
  <arg name="laser_topic" default="scan" />
  <arg name="custom_param_file" default="$(find turtlebot_navigation)/param/dummy.yaml"/>

 <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">

  <rosparam file="$(find comp5)/param/odom_nav_params/costmap_common_params.yaml" command="load" ns="global_costmap" />
  <rosparam file="$(find comp5)/param/odom_nav_params/costmap_common_params.yaml" command="load" ns="local_costmap" />

  <rosparam file="$(find comp5)/param/odom_nav_params/global_costmap_params.yaml" command="load" />
  <rosparam file="$(find comp5)/param/odom_nav_params/local_costmap_params.yaml" command="load" />

  <!-- <rosparam file="$(find turtlebot_navigation)/param/odom_nav_params/base_local_planner_params.yaml" command="load" /> -->
  <rosparam file="$(find comp5)/param/odom_nav_params/dwa_local_planner_params.yaml" command="load" />
  <rosparam file="$(find comp5)/param/odom_nav_params/move_base_params.yaml" command="load" />

  <param name="base_global_planner" type="string" value="navfn/NavfnROS" />
  <!-- <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/> -->
  <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS"/>


  <remap from="cmd_vel" to="navigation_velocity_smoother/raw_cmd_vel"/>
  <remap from="odom" to="$(arg odom_topic)"/>
  <remap from="scan" to="$(arg laser_topic)"/>

 </node>

</launch>
